<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_theme"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.mb.wash.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_head_s"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_av_num_bg"
            android:text="60部电影"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="波多野结衣"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_avatar"
            android:maxLines="2"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_name"
            android:text="波多野结衣（はたの ゆい），女，1988年5月24日出生于日本京都府，著名日本女演员、AV女优。"
            android:textColor="@color/base_gray"
            android:textSize="14sp" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bg_color"/>
</LinearLayout>