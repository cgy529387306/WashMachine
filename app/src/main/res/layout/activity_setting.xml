<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/btn_account"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/base_theme">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="账户管理"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="50dp"
            android:src="@mipmap/ic_arrow_right_brown"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/base_theme">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="清理缓存"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="27.58M"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/base_orange"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/base_theme">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="当前版本"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="最新"
            android:textSize="13sp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_shape_orange"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_agreement"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/base_theme">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="用户协议"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="50dp"
            android:src="@mipmap/ic_arrow_right_brown"/>
    </LinearLayout>
</LinearLayout>
